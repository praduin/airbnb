    </nav>
  <main class="card-container">
    <% registeredHomes.forEach((home) => { %>
      <div class="card">
        <img
          src="/uploads/<%= home.houseImages %>"
          alt="Image of <%= home.houseName %>"
        />

        <div class="card-content">
          <h2><%= home.houseName %></h2>
          <p><strong>Location:</strong> <%= home.location %></p>
          <p><strong>Price/Day:</strong> ‚Çπ<%= home.pricePerDay %></p>
          <p><strong>Nights:</strong> <%= home.numberOfNights %></p>
          <p><strong>Rooms:</strong> <%= home.numberOfRooms %></p>
          <p><strong>Facilities:</strong> <%= home.facilities %></p>
     
          <br> 
<a class="bookButton" 
   href="/homes/<%= home._id.toString() %>" 
   style="display: inline-block; padding: 10px 20px; background-color: #007bff; color: white; text-decoration: none; border: none; border-radius: 5px; cursor: pointer; text-align: center;">
   üîç View Details
</a>


           
          

  <form action="/favoritehome" method="POST" style="margin-top: 10px; text-align: center;">
  <input type="hidden" name="id" value="<%= home._id %>">
  <button type="submit" style="padding: 10px 20px; background-color: #ff5a5f; color: white; border: none; border-radius: 5px; cursor: pointer;">
    ‚ù§Ô∏è Add to Favorites
  </button>
</form>

         
        </div>
      </div>
    <% }) %>
 
  </main>
</body>
</html>

